<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/etEmployeeMessage"
        android:layout_width="357dp"
        android:layout_height="118dp"
        android:text="Welcome to Employee Home"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <Button
        android:id="@+id/btnLogOutEmployee"
        android:layout_width="231dp"
        android:layout_height="46dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="79dp"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmployeeMessage" />

    <Button
        android:id="@+id/btnSearchByPrefEmployeePage"
        android:layout_width="227dp"
        android:layout_height="52dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="20dp"
        android:text="SEARCH BY PREFERENCES"
        app:layout_constraintBottom_toTopOf="@+id/btnLogOutEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDashboardEmployerPage" />

    <Button
        android:id="@+id/btnDashboardEmployerPage"
        android:layout_width="227dp"
        android:layout_height="51dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="21dp"
        android:text="DASHBOARD"
        app:layout_constraintBottom_toTopOf="@+id/btnSearchByPrefEmployeePage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateTasksEmployerPage" />

    <Button
        android:id="@+id/btnCreateTasksEmployerPage"
        android:layout_width="228dp"
        android:layout_height="51dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="25dp"
        android:text="SEARCH TASKS"
        app:layout_constraintBottom_toTopOf="@+id/btnDashboardEmployerPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEmployeeMessage" />
</androidx.constraintlayout.widget.ConstraintLayout>